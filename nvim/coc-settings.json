{
  "outline.autoPreview": true,
  "suggest.noselect": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "cursors.cancelKey": "<C-c>",
  "list.insertMappings": {
    "<C-c>": "do:exit",
    "<Esc>": "do:exit"
  },
  "cursors.nextKey": "",
  "cursors.previousKey": "",

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "79"],
  "pyright.inlayHints.functionReturnTypes": true,
  "pyright.inlayHints.variableTypes": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pydocstyleArgs": ["--ignore"," D100,D101,D103"],
  "python.linting.banditEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8CategorySeverity.E": "Warning",
  "python.linting.flake8CategorySeverity.F": "Warning",
  "python.linting.flake8CategorySeverity.W": "Information",
  "python.linting.ruffEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pytypeEnabled": true,


  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.diagnostics.disable": [
    "missing-parameter"
  ],
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.3/clangd_15.0.3/bin/clangd",

  "html.filetypes": ["html", "htmldjango"]
}
